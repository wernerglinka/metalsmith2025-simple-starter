{% extends "layout.njk" %}

{% block body %}
  <div class="container">
  
    <article class="blog-post">
      <h1>{{ post.title }}</h1>
      <time datetime="{{ post.date }}">{{ post.date | blogDate }}</time>

      <img class="blog-image" src="{{ post.image }}" alt="{{ post.title }}" />

      {{ contents | safe }}

    </article>
  </div>
{% endblock %}