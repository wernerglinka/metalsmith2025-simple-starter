{
  "name": "metalsmith2025-simple-starter",
  "version": "1.0.0",
  "description": "A simple Metalsmith starter for 2025",
  "type": "module",
  "keywords": [
    "metalsmith",
    "starter"
  ],
  "author": "werner@glinka.co",
  "license": "MIT",
  "scripts": {
    "dev": "metalsmith -c metalsmith.js --env NODE_ENV=development --env DEBUG=@metalsmith*",
    "dev:subdomain": "metalsmith -c metalsmith.js --env NODE_ENV=development --env DEBUG=@metalsmith* --env BASE_PATH=metalsmith2025-simple-starter",
    "build": "metalsmith -c metalsmith.js --env NODE_ENV=production",
    "build:subdomain": "metalsmith -c metalsmith.js --env NODE_ENV=production --env BASE_PATH=metalsmith2025-simple-starter",
    "start": "NODE_ENV=development DEBUG=@metalsmith* node metalsmith.js --watch",
    "start:subdomain": "NODE_ENV=development DEBUG=@metalsmith BASE_PATH=metalsmith2025-simple-starter node metalsmith.js --watch",
    "serve": "browser-sync start --server 'build'",
    "format": "prettier --write \"**/*.{js,json,njk,css}\"",
    "lint": "eslint --fix .",
    "fix": "npm run format && npm run lint",
    "depcheck": "depcheck"
  },
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "eslint": "^9.32.0",
    "prettier": "^3.6.2"
  },
  "dependencies": {
    "@metalsmith/drafts": "^1.3.0",
    "@metalsmith/layouts": "^3.0.0",
    "@metalsmith/permalinks": "^3.2.0",
    "depcheck": "^1.4.7",
    "jstransformer-nunjucks": "^1.2.0",
    "marked": "^16.1.1",
    "metalsmith": "^2.6.3",
    "metalsmith-blog-lists": "^2.1.0",
    "metalsmith-menu-plus": "^0.2.0",
    "metalsmith-optimize-html": "^0.7.0",
    "metalsmith-safe-links": "^2.0.0",
    "metalsmith-simple-pagination": "^0.0.4",
    "metalsmith-sitemap": "^1.2.2",
    "metalsmith-static-files": "^1.2.0",
    "metalsmith-unified-markdown": "^0.0.4",
    "rehype-highlight": "^7.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
